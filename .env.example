# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/nexus

# JWT Configuration (MUST match backend-java/.env)
JWT_SECRET=your-jwt-secret-here-min-32-chars

# Server
PYTHON_BACKEND_PORT=8000
LOG_LEVEL=info

# File Storage
UPLOAD_BASE_DIR=/path/to/uploads

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=email_embeddings

# Azure Speech Services
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=koreacentral

# Azure Translator
AZURE_TRANSLATOR_KEY=your-azure-translator-key-here
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com
AZURE_TRANSLATOR_REGION=koreacentral
